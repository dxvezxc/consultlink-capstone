{
  "version": 2,
  "public": false,
  "buildCommand": "npm run build --prefix=client && npm --prefix=server install",
  "outputDirectory": "client/build",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/index.html",
      "status": 200
    }
  ]
}
