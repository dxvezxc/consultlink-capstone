{
  "version": 2,
  "public": false,
  "buildCommand": "npm run build --prefix=client",
  "outputDirectory": "client/build",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-builds",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "server/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/index.html",
      "status": 200
    }
  ]
}
